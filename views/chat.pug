                  span.name Feruza
                  span.preview
                    | Bugun havo juda issiq.
                    | va juda ajoyib
                li.person
                  span.name Dilbar
                  span.preview Nima gaplar olamda
                li.person
                  span.name Saad Lamjarred
                  span.preview Inta Muallim.
                li.person
                  span.name Bobur Aka
                  span.preview Menga juda yoqti...
                li.person
                  span.name Babu
                  span.preview
                    | Ceza - SusPus.mp3
                    | Video YouTubeda
                li.person
                  span.name David
                  span.preview YooHoooo Hammaga Salom
            .tab-right(ng-show="activeTab === 2")
              ul.people
                li.person(ng-repeat="user in onlineList")
                  img(ng-src="{{ user.meta.profilePhotoUrl }}")
                  span.name {{ user.meta.name }} {{ user.meta.surname }}
                  //span.preview Juda hayron qoldim...

          .bottom
            button(ng-click="newRoom()") Yangi Xona
