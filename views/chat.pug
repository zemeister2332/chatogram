extends layout

append stylesheets
  link(rel='stylesheet', href='/stylesheets/chat.css')

block content
  div(ng-controller="chatController")
    .wrapper
      .container
        .left
          .top
            ul.tab
              li.conversations(ng-click="changeTab(1)")
                a(ng-class="{active: activeTab === 1}")  Chatlar
              li.onlineUsers(ng-click="changeTab(2)")
                a(ng-class="{active: activeTab === 2}")  Tarmoqda

          .tabArea
            .tab-left(ng-show="activeTab === 1")
              ul.people
                li.person
                  span.name  Saud Sadikoff
                  span.preview Juda hayron qoldim...
                li.person.active
                  span.name  Asror Zakari
                  span.preview Nima deyishgaham hayronman!
                li.person
                  span.name  Bexruz
                  span.preview Lekin biz baribir yangi gilam olishimiz kerak.
                li.person
                  span.name Shoxnur MS
                  span.preview Unchalik ham yomon emas...
